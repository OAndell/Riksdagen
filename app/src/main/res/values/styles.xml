<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/MyToolbarStyle</item> <!-- used for the back arrow on the action bar -->

    </style>

    <style name="animationMenu" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menuon</item>
        <item name="android:windowExitAnimation">@anim/menuoff</item>
    </style>


    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColorPrimaryInverse">#fff</item>
        <item name="android:textColorSecondary">#fff</item>
        <item name="actionMenuTextColor">#fff</item>
    </style>
</resources>
